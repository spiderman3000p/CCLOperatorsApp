<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui_urban.pending.PendingDeliveriesFragment">

    <EditText
        android:id="@+id/searchEt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_search_left___1504_"
        android:drawableRight="@drawable/ic_search_left___1504_"
        android:drawableTint="@color/secondaryColor"
        android:ems="10"
        android:hint="Search..."
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pendingDeliveriesRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B5B5B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEt4" />
</androidx.constraintlayout.widget.ConstraintLayout>